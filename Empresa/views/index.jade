extends layout

block content
	h1= title
	p Bienvenido al #{title}


	table
		thead
			tr
				th Empresa
				th Alumno
				th Fecha de Inicio
				th Fecha de Finalizacion
				th Calificacion
		tbody
			if(empresas)
				each empresa in empresas
					tr
						td=empresa.nombre
						td=empresa.alumno
						td=empresa.fecha_inicio
						td=empresa.fecha_finalizacion
						td=empresa.calificacion
			else
				tr
					td=empresa.nombre
					td=empresa.alumno
					td=empresa.fecha_inicio
					td=empresa.fecha_finalizacion
					td=empresa.calificacion




